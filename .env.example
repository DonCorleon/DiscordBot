# Discord Configuration
DISCORD_TOKEN="your_discord_bot_token_here"

# Admin Dashboard - set to false for headless servers
ENABLE_ADMIN_DASHBOARD=true

# Command Prefix - comma-separated for multiple prefixes
COMMAND_PREFIX=~,^

# Monitoring
MAX_HISTORY=1000
LOG_LEVEL=INFO

# Voice
DEFAULT_VOLUME=0.5

# Voice Time Tracking
VOICE_TRACKING_ENABLED=true
VOICE_POINTS_PER_MINUTE=0.0
VOICE_TIME_DISPLAY_MODE=ranges
VOICE_TRACKING_TYPE=total

# Auto-Join Configuration
AUTO_JOIN_ENABLED=true
AUTO_JOIN_TIMEOUT=300

# Weekly Recap (optional)
# ENABLE_WEEKLY_RECAP=false
# WEEKLY_RECAP_CHANNEL_ID=
# WEEKLY_RECAP_DAY=0
# WEEKLY_RECAP_HOUR=9

# Audio Ducking
DUCKING_ENABLED=true
DUCKING_LEVEL=0.5
DUCKING_TRANSITION_MS=50

# Web Dashboard (for future implementation)
# ENABLE_WEB_DASHBOARD=true
# WEB_HOST=0.0.0.0
# WEB_PORT=8000
# WEB_USERNAME=admin
# WEB_PASSWORD=your_secure_password_here
